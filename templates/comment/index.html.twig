{% set sUserName = comment.user.username %}
<div class="comment mb-5" id="c-{{comment.id}}">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <a href="" class="textdecoration-none">
                    <span class="comment-author" href="#">{{sUserName}}</span>
                </a> {{ comment.createdAt|date('d M Y') ~ ' at ' ~ comment.createdAt|date('H:i:s') }}
            </h5>
            <p class="card-text">
                {{ comment.content }}
            </p>
        </div>
    </div>

</div>