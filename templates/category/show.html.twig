{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row g-5">
            <div class="col">
                <h3 class="pb-4 mb-4 fst_italic border-bottom">{{ category.name }}</h3>
                <div id="article-list">
                    {% include 'article/list.html.twig' with {articles : category.articles, leftColumnSize : 4, rightColumnSize : 8} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
